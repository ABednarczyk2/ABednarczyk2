library(data.table)

# For individual data (i)
i_wide <- dcast(i, 
                year ~ name, 
                value.var = "variable")

# For family data (f)
f_wide <- dcast(f, 
                year ~ name, 
                value.var = "variable")

# Check EXACT column names in both datasets
names(i)
names(f)

